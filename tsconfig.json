{
  "include": ["src", "add-service.ts"],
  "exclude": ["test", "dist", "node_modules"],
  "compilerOptions": {
    "module": "ES6",
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "strictPropertyInitialization": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true
  }
}
